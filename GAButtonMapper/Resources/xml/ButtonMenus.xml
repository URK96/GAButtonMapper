<?xml version="1.0" encoding="utf-8" ?> 
<androidx.preference.PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

  <!--Button Interval Part-->

  <androidx.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_ButtonInterval">

    <androidx.preference.Preference
      android:key="LogCounting"
      android:title="@string/MainMenu_LogCounting_Title"
      android:summary="@string/MainMenu_LogCounting_Summary"/>

    <androidx.preference.Preference
      android:key="ClickInterval"
      android:title="@string/MainMenu_ButtonInterval_Title"
      android:summary="@string/MainMenu_ButtonInterval_Summary"/>

    <androidx.preference.Preference
      android:key="LongClickInterval"
      android:title="@string/MainMenu_LongClickInterval_Title"
      android:summary="@string/MainMenu_LongClickInterval_Summary"/>

  </androidx.preference.PreferenceCategory>

  <!--Single Click Part-->
  
  <androidx.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_SingleClick">
    
    <androidx.preference.SwitchPreference
      android:key="EnableSingleClick"
      android:title="@string/MainMenu_SingleClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_SingleClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_SingleClick_FeatureEnable_SummaryOff"/>

    <androidx.preference.ListPreference
      android:key="MappingType_SingleClick"
      android:dependency="EnableSingleClick"
      android:entries="@array/MappingTypeList"
      android:entryValues="@array/MappingTypeList_Value"
      android:title="@string/MainMenu_Detail_MappingType_Title"/>

    <androidx.preference.Preference
      android:key="AppSelector_SingleClick"
      android:dependency="EnableSingleClick"
      android:visible="false"
      android:title="@string/MainMenu_Detail_AppSelector_Title"
      android:summary="@string/MainMenu_Detail_AppSelector_Summary"/>

    <androidx.preference.ListPreference
      android:key="ActionSelector_SingleClick"
      android:dependency="EnableSingleClick"
      android:visible="false"
      android:entries="@array/CustomActionList"
      android:entryValues="@array/CustomActionList_Value"
      android:title="@string/MainMenu_Detail_ActionSelector_Title"
      android:summary="@string/MainMenu_Detail_ActionSelector_Summary"/>

    <androidx.preference.Preference
      android:key="URLSelector_SingleClick"
      android:dependency="EnableSingleClick"
      android:visible="false"
      android:title="@string/MainMenu_Detail_URLSelector_Title"
      android:summary="@string/MainMenu_Detail_URLSelector_Summary"/>
    
  </androidx.preference.PreferenceCategory>

  <!--Double Click Part-->
    
  <androidx.preference.PreferenceCategory
