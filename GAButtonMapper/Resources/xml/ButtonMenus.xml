      android:entryValues="@array/CustomActionList_Value"
      android:title="@string/MainMenu_Detail_ActionSelector_Title"
      android:summary="@string/MainMenu_Detail_ActionSelector_Summary"/>

  </android.support.v7.preference.PreferenceCategory>

  <!--Double Long Click Part-->

  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_DoubleLongClick">

    <android.support.v14.preference.SwitchPreference
      android:key="EnableDoubleLongClick"
      android:title="@string/MainMenu_DoubleLongClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_DoubleLongClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_DoubleLongClick_FeatureEnable_SummaryOff"/>

    <android.support.v7.preference.ListPreference
      android:key="MappingType_DoubleLongClick"
      android:dependency="EnableDoubleLongClick"
      android:entries="@array/MappingTypeList"
      android:entryValues="@array/MappingTypeList_Value"
      android:title="@string/MainMenu_Detail_MappingType_Title"/>

    <android.support.v7.preference.Preference
      android:key="AppSelector_DoubleLongClick"
      android:dependency="EnableDoubleLongClick"
      android:visible="false"
