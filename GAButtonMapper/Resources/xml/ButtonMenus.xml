<?xml version="1.0" encoding="utf-8" ?> 
<android.support.v7.preference.PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

  <!--Button Interval Part-->

  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_ButtonInterval">

    <android.support.v7.preference.Preference
      android:key="ClickInterval"
      android:title="@string/MainMenu_ButtonInterval_Title"
      android:summary="@string/MainMenu_ButtonInterval_Summary"/>

    <android.support.v7.preference.Preference
      android:key="LongClickInterval"
      android:title="@string/MainMenu_LongClickInterval_Title"
      android:summary="@string/MainMenu_LongClickInterval_Summary"/>

  </android.support.v7.preference.PreferenceCategory>

  <!--Single Click Part-->
  
  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_SingleClick">
    
    <android.support.v14.preference.SwitchPreference
      android:key="EnableSingleClick"
      android:title="@string/MainMenu_SingleClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_SingleClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_SingleClick_FeatureEnable_SummaryOff"/>

    <android.support.v7.preference.ListPreference
      android:key="MappingType_SingleClick"
      android:dependency="EnableSingleClick"
      android:entries="@array/MappingTypeList"
      android:entryValues="@array/MappingTypeList_Value"
      android:title="@string/MainMenu_Detail_MappingType_Title"/>

    <android.support.v7.preference.Preference
      android:key="AppSelector_SingleClick"
      android:dependency="EnableSingleClick"
      android:visible="false"
      android:title="@string/MainMenu_Detail_AppSelector_Title"
      android:summary="@string/MainMenu_Detail_AppSelector_Summary"/>

    <android.support.v7.preference.ListPreference
      android:key="ActionSelector_SingleClick"
      android:dependency="EnableSingleClick"
      android:visible="false"
      android:entries="@array/CustomActionList"
      android:entryValues="@array/CustomActionList_Value"
      android:title="@string/MainMenu_Detail_ActionSelector_Title"
      android:summary="@string/MainMenu_Detail_ActionSelector_Summary"/>
    
  </android.support.v7.preference.PreferenceCategory>

  <!--Double Click Part-->
    
  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_DoubleClick">

    <android.support.v14.preference.SwitchPreference
      android:key="EnableDoubleClick"
      android:title="@string/MainMenu_DoubleClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_DoubleClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_DoubleClick_FeatureEnable_SummaryOff"/>

    <android.support.v7.preference.ListPreference
      android:key="MappingType_DoubleClick"
      android:dependency="EnableDoubleClick"
      android:entries="@array/MappingTypeList"
      android:entryValues="@array/MappingTypeList_Value"
      android:title="@string/MainMenu_Detail_MappingType_Title"/>

    <android.support.v7.preference.Preference
      android:key="AppSelector_DoubleClick"
      android:dependency="EnableDoubleClick"
      android:visible="false"
      android:title="@string/MainMenu_Detail_AppSelector_Title"
      android:summary="@string/MainMenu_Detail_AppSelector_Summary"/>

    <android.support.v7.preference.ListPreference
      android:key="ActionSelector_DoubleClick"
      android:dependency="EnableDoubleClick"
      android:visible="false"
      android:entries="@array/CustomActionList"
      android:entryValues="@array/CustomActionList_Value"
      android:title="@string/MainMenu_Detail_ActionSelector_Title"
      android:summary="@string/MainMenu_Detail_ActionSelector_Summary"/>

  </android.support.v7.preference.PreferenceCategory>

  <!--Triple Click Part-->

  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_TripleClick">

    <android.support.v14.preference.SwitchPreference
      android:key="EnableTripleClick"
      android:title="@string/MainMenu_TripleClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_TripleClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_TripleClick_FeatureEnable_SummaryOff"/>

    <android.support.v7.preference.ListPreference
      android:key="MappingType_TripleClick"
      android:dependency="EnableTripleClick"
      android:entries="@array/MappingTypeList"
      android:entryValues="@array/MappingTypeList_Value"
      android:title="@string/MainMenu_Detail_MappingType_Title"/>

    <android.support.v7.preference.Preference
      android:key="AppSelector_TripleClick"
      android:dependency="EnableTripleClick"
      android:visible="false"
      android:title="@string/MainMenu_Detail_AppSelector_Title"
      android:summary="@string/MainMenu_Detail_AppSelector_Summary"/>

    <android.support.v7.preference.ListPreference
      android:key="ActionSelector_TripleClick"
      android:dependency="EnableTripleClick"
      android:visible="false"
      android:entries="@array/CustomActionList"
      android:entryValues="@array/CustomActionList_Value"
      android:title="@string/MainMenu_Detail_ActionSelector_Title"
      android:summary="@string/MainMenu_Detail_ActionSelector_Summary"/>

  </android.support.v7.preference.PreferenceCategory>

  <!--Single Long Click Part-->

  <android.support.v7.preference.PreferenceCategory
    android:title="@string/MainMenu_Category_SingleLongClick">

    <android.support.v14.preference.SwitchPreference
      android:key="EnableSingleLongClick"
      android:title="@string/MainMenu_SingleLongClick_FeatureEnable_Title"
      android:summaryOn="@string/MainMenu_SingleLongClick_FeatureEnable_SummaryOn"
      android:summaryOff="@string/MainMenu_SingleLongClick_FeatureEnable_SummaryOff"/>

